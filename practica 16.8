class Rectangle:
    def __init__ (self,a,b):
        self.a= a
        self.b= b
    def get_area(self):
        return self.a * self.b

class Square:
    def __init__(self,a):
        self.a= a
    def det_area_square (self):
        return  self.a** 2

class Curcles:
    def __init__(self, r):
        self.r=r
    def get_area_curlce(self):
        return self.r** 2*3.14


